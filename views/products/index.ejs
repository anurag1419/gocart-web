<%-include('../partials/header.ejs')%>
<%- include('../partials/navbar.ejs')%>

<main class="container">

<%- include('../partials/flash') %>
  
<section id="heading"> 

    <h4 class="display-5 "><i class="fab fa-shopify" style="margin-right: 20px;"></i>GoCart</h4>

</section>
    <div class="row">
        <%for(let product of products){%>
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card mx-auto"style="width: 20rem;">
                    <img class="card-img-top" src="<%=product.img%>" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%=product.name%></h5>
                      <p class="card-text"><%=product.desc.substring(0,100)%></p>
                      <h5 class="card-title">&#x20B9;<%=product.price%></h5>
                      <a href="/products/<%=product._id%>" class="btn btn-outline-primary">Buy Now</a>
                
                    </div>
                  </div>
            </div>
        <%}%>
    </div>

</main>


<%-include('../partials/footer.ejs')%>